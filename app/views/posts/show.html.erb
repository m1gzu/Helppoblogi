<h1><%=@post.title %></h1>
<h4><%=@post.user.email%></h4>
<p><%= @post.body %></p>

<hr>
<% if user_signed_in? %>
<%= link_to "Edit", edit_post_path(@post), :class =>'btn btn-default' %>
<%= link_to "Delete",post_path(@post), 
			method: :delete,
			data: {confirm: 'Are you sure?'},
			:class =>'btn btn-danger' %>

<% end %>


</hr>


